@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<div class="jumbotron bg-white text-center font-weight-bolder text-50 text-primary"><h4>Register</h4></div>

<div class="row col-6 mx-auto">
    <div class="col-md-12">
        <div class="card border-1 m-2 col-12 box-shadow p-4 ">
            <form action="" method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="col-12"> Firstname</label>
                    <input asp-for="FirstName" class="col-12" />
                    <span asp-validation-for="FirstName" class="text-warning"></span>

                </div>

                <div class="form-group">
                    <label asp-for="LastName" class="col-12"> Lastname</label>
                    <input asp-for="LastName" class="col-12" />
                    <span asp-validation-for="LastName" class="text-warning"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-12"> Email</label>
                    <input asp-for="Email" class="col-12" />
                    <span asp-validation-for="Email" class="text-warning"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Password" class="col-12"> Password</label>
                    <input asp-for="Password" class="col-12" type="password" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
                <div class="form-group">
                    <input type="submit" name="Login" value="Submit" class="btn btn-primary w-50 col-6 offset-3" />
                </div>

            </form>
        </div>
    </div>
</div>
